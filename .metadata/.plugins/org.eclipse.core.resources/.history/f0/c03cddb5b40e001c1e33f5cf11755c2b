package Aula3;
import java.util.Scanner;
public class Aividade5 {
    public static void main(String[] args){
    	double carroNovo = 0, custof = 0, impostos = 1.45, pdistribuidor = 0;
    	System.out.println("Qual o valor do carro? ");
    	Scanner s = new Scanner(System.in);
    	custof = s.nextDouble();
    	
    	pdistribuidor = custof * 0.28;
    	impostos = pdistribuidor * 0.45;
    	carroNovo = carroNovo + pdistribuidor + impostos;
    	
    	System.out.println("O valor do carro com as taxas é " + carroNovo);
    }
}
